      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es6",
      "moduleResolution": "node",
      "downlevelIteration": true,
      "target": "es2016",
      "allowJs": true
    },
    "include": [
        "./src/**/*"
    ]
}